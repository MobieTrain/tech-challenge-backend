{
  "name": "tech-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "UNLICENSED",
  "private": "true",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "prestart": "npm run db:init && npm run db:latest",
    "start": "NODE_PATH=./dist node ./dist/index.js",
    "local": "ts-node-dev --inspect=7000 ./src/index.ts",
    "exec": "node ./dist/index.js",
    "db:init": "node dist/db/create-database.js",
    "db:latest": "npx knex migrate:latest --knexfile dist/knexfile.js",
    "lint:tdd": "nodemon --watch ./src --ext ts  --exec npm run lint",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:tdd": "nodemon --delay 0.01 --inspect=7001 --watch ./src --ext ts,json --exec npm test",
    "test": "lab ./src --pattern spec"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^20.0.0",
    "joi": "^17.2.1",
    "knex": "^0.21.6",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^24.0.0",
    "@types/faker": "^5.1.2",
    "@types/hapi__hapi": "^20.0.0",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "faker": "^5.1.0",
    "lab-transform-typescript": "^3.0.1",
    "nodemon": "^2.0.4",
    "sinon": "^9.1.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.3"
  }
}
